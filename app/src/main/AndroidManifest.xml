<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Exact alarms (Android 12+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkoutKing">

        <!-- WORKOUT CALENDAR -->
        <activity
            android:name=".WorkoutCalendarScreen"
            android:exported="false" />

        <!-- USER PROFILE -->
        <activity
            android:name=".UserProfileInfoScreen"
            android:exported="false" />

        <!-- SPLASH SCREEN (LAUNCHER) -->
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.WorkoutKing.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LOGIN SCREEN -->
        <activity
            android:name=".LoginScreen"
            android:exported="false" />

        <!-- USER SIGN-UP SCREEN -->
        <activity
            android:name=".UserSignUpScreen"
            android:exported="false" />

        <!-- UNIQUE USER HOME SCREEN -->
        <activity
            android:name=".UniqueUserHomeScreen"
            android:exported="false" />

        <!-- ðŸ”” FULL-SCREEN ALARM ACTIVITY -->
        <activity
            android:name=".AlarmActivity"
            android:exported="false"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <!-- ðŸ”” ALARM RECEIVER -->
        <receiver
            android:name=".AlarmReceiver"
            android:exported="false" />

    </application>

</manifest>
