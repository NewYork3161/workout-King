<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.WorkoutKing"
        parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.WorkoutKing"
        parent="Base.Theme.WorkoutKing" />

    <!-- LAUNCHER / SYSTEM SPLASH THEME -->
    <style name="Theme.WorkoutKing.Launcher"
        parent="Theme.SplashScreen">

        <!-- Use existing app resources -->
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenIconBackgroundColor">@null</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="postSplashScreenTheme">@style/Theme.WorkoutKing</item>
    </style>


</resources>
