<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="2dp"
    app:strokeColor="#00B7FF"
    app:cardBackgroundColor="#111111"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ðŸ”¥ RANDOMIZED BACKGROUND IMAGE -->
        <ImageView
            android:id="@+id/imgCardBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Dashboard card background"
            android:adjustViewBounds="true"/>

        <!-- ðŸ”¥ GLOSS OVERLAY (Your gloss_effect_overlay.xml) -->
        <ImageView
            android:id="@+id/glossOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gloss_effect_overlay"
            android:scaleType="fitXY"
            android:alpha="0.60"/>

        <!-- ðŸ”¥ CARD TITLE -->
        <TextView
            android:id="@+id/tvCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="12dp"
            android:text="Card Title"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
