<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".UserWorkoutSurveyScreen">

    <!-- ===================== QUESTION CARD ===================== -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="445dp"
        android:layout_height="257dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/input_blue_outline"
        android:gravity="center"
        android:padding="32dp"
        android:text="Question goes here"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===================== DYNAMIC INPUT AREA ===================== -->
    <LinearLayout
        android:id="@+id/dynamicInputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Kotlin will add UI elements here -->
    </LinearLayout>

    <!-- ===================== NO BUTTON ===================== -->
    <ImageView
        android:id="@+id/btnNo"
        android:layout_width="202dp"
        android:layout_height="129dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/survey_no_btn"
        android:scaleType="fitCenter"
        android:contentDescription="No"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/dynamicInputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnYes"/>

    <!-- ===================== YES BUTTON ===================== -->
    <ImageView
        android:id="@+id/btnYes"
        android:layout_width="197dp"
        android:layout_height="129dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/survey_yes_btn"
        android:scaleType="fitCenter"
        android:contentDescription="Yes"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/dynamicInputContainer"
        app:layout_constraintStart_toEndOf="@id/btnNo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===================== SKIP BUTTON ===================== -->
    <ImageView
        android:id="@+id/btnSkipSurvey"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/skip_survey_btn"
        android:scaleType="fitCenter"
        android:contentDescription="Skip Survey"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnYes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===================== LOGO ===================== -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="282dp"
        android:layout_height="228dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/wk_logo"
        android:contentDescription="Workout King Logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
