<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".UserWorkoutPlanScreen">

    <!-- CHAT SCROLL AREA -->
    <ScrollView
        android:id="@+id/scrollViewChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/chatContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <!-- ================= USER INPUT ROW ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- TEXT INPUT -->
        <EditText
            android:id="@+id/tvUserText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Type your questionâ€¦"
            android:textColor="#000000"
            android:textColorHint="#777777"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/rounded_white_input"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:importantForAutofill="no" />

        <!-- SEND ARROW BUTTON -->
        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/enter_arrow_btn"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="4dp" />

        <!-- NEW HOME BUTTON -->
        <ImageButton
            android:id="@+id/btnHomeShortcut"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/home_btn"
            android:contentDescription="Go Home"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="4dp" />

    </LinearLayout>

</LinearLayout>
