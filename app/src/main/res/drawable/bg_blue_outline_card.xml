<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background fill -->
    <solid android:color="#111111"/>

    <!-- Blue outline -->
    <stroke
        android:width="2dp"
        android:color="#00B7FF"/>

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Optional inner padding so content doesn't touch border -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>

</shape>
